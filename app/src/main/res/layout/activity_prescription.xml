<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Appointment.PrescriptionActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/presciption_li_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/presciption_tvDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Department"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="#3F51B5"/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/presciption_cv_appointment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020/03/12"
                    android:textSize="20sp"
                    android:textColor="@color/teal_200"

                    android:padding="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/relative_layout_2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/presciption_cv_name"
                    android:text="name"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:textColor="#3F51B5"
                    />

                <TextView
                    android:id="@+id/presciption_cv_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENDING"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:padding="5dp"
                    android:textColor="#F44336"
                    android:textSize="20sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prescription"
                android:id="@id/relative_layout_2"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:textStyle="bold"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp">
                <TextView
                    android:textSize="20dp"
                    android:id="@+id/tv_prescription"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:text="Live a healthy life style"
                    android:textStyle="italic"/>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>