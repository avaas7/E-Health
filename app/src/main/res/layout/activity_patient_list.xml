<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doctor.PatientListActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvNoPatients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No patients yet"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/tv_patients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patients"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:gravity="center"
        android:background="#B8B1B1"
        android:padding="8dp"

        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_patients"
        android:layout_height="match_parent"
        android:id="@+id/rvPatientList"
        android:layout_margin="2dp"
        android:fitsSystemWindows="true"
        android:padding="2dp"/>

</RelativeLayout>